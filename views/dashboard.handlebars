<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rate Your Bootcamp</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link rel="stylesheet" href="../stylesheet/styles.css" />
    <link rel="stylesheet" href="../stylesheet/form.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"/>
  </head>
  <body>
    <!-- begin nav-->
    <nav>
      <div class="nav-wrapper">
        <a href="/homepage" class="brand-logo left"><img
            src="./images/dev.png"
            width="30%"
            height="30%"
          /></a>
        <ul class="right hide-on-med-and-down">
          <li>
            <a href="/search"><i class="material-icons right">search</i>Search
              For Bootcamps</a>
          </li>
          <li>
            <a href="/hire"><i class="material-icons right">verified_user</i>Hire
              A Bootcamp Graduate</a>
          </li>
          <li>
            <a href="/rate"><i class="material-icons right">star</i>Bootcamp
              Reviews</a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- end nav -->
    <!-- begin banner image -->
    <div class="banner">
      <img class="logo" height="100%" width="100%" src="./images/banner1.png" />
    </div>
    <!--end banner-->
    <div class="search-results">
      <section>
        <h2>Create New Post</h2>
        <form class="new-post-form">
          <div>
            <label for="post-title">Review Title</label>
            <input type="text" id="post-title" name="post-title" />
          </div>
          <div>
            <label for="post-bootcampName">Bootcamp Name</label>
            <input type="text" id="post-bootcampName" name="post-bootcampName"/>
          </div>
          <div>
            <label for="post-deliveryFormat">Delivery Format: In-Person, Online, or Hybrid</label>
            <label for="in-person">In-Person</label><br />
            <input type="radio" id="in-person" name="post-deliveryFormat" value="in-person"/>
            <label for="online">Online</label><br />
            <input type="radio" id="online" name="post-deliveryFormat" value="online"/>
            <label for="hybrid">Hybrid</label><br />
            <input type="radio" id="hybrid" name="post-deliveryFormat" value="hybrid"/>
          </div>
          <div>
            <label for="post-length">How many weeks was your Bootcamp?</label>
            <label for="weeks">Number of Weeks (1-52):</label>
            <input type="number" id="weeks" name="post-length" min="1" max="52">
          </div>
          <div>
            <label for="post-status">Was your bootcamp full time or part time?</label>
            <label for="full-time">Full Time</label><br />
            <input type="radio" id="full-time" name="post-status" value="full-time"/>
            <label for="part-time">Part Time</label><br />
            <input type="radio" id="part-time" name="post-status" value="part-time"/>
          </div>
          <div>
            <label for="post-price">Price</label>
            <input id="post-price" name="post-price" />
          </div>
          <div>
            <label for="post-quality">Quality</label>
            <form>
            <label for="quality">Quality Rating (between 0 and 10):</label>
            <input type="quality" id="quality" name="post-quality" min="0" max="10">
            </form>
          </div>
          <div>
            <label for="post-standardsMet">Did it meet your expectations?</label>
            <label for="yes-met">Yes</label><br />
            <input type="radio" id="yes-met" name="post-standardsMet" value="yes-met"/>
            <label for="no-met">No</label><br />
            <input type="radio" id="no-met" name="post-standardsMet" value="no-met"/>
          </div>
          <div>
            <label for="post-repeat">Would you choose this Bootcamp again?</label>
            <label for="yes-repeat">Yes</label><br />
            <input type="radio" id="yes-repeat" name="post-deliveryFormat" value="yes-repeat"/>
            <label for="no-repeat">No</label><br />
            <input type="radio" id="no-repeat" name="post-deliveryFormat" value="no-repeat"/>
          </div>
          <div>
            <label for="post-overallRating">Overall rating</label>
            <form>
            <label for="rating">Overall Rating (between 1 and 10):</label>
            <input type="range" id="rating" name="post-overallRating" min="0" max="10">
            </form>
          </div>
          <div>
            <label for="post-review_comments">Additional Comments</label>
            <input type="text" id="post-review_comments" name="post-review_comments" />
          </div>
          <button type="submit" class="btn">Create</button>
        </form>
      </section>
    </div>
  </body>
</html>
