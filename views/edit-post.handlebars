<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
<section>
    <form id="edit-post-form" class="new-post-form">
      {{!-- <div>
        <label for="post-ID">Post ID</label>
        <input type="text" id="post-id" name="post-id" />
      </div> --}}
      <div>
        <label for="post-title">Review Title</label>
        <input type="text" id="post-title" name="post-title" value="{{post.title}}"/>
      </div>
      <div>
        <label for="post-bootcampName">Bootcamp Name</label>
        <input type="text" id="post-bootcampName" name="post-bootcampName" value="{{post.bootcampName}}"/>
      </div>
      <div>
        <label for="post-deliveryFormat">Delivery Format: In-Person, Online,
          or Hybrid</label>
        <input type="text" id="post-deliveryFormat" name="post-deliveryFormat" value="{{post.deliverFormat}}"/>
      </div>
      <div>
        <label for="post-length">How many weeks was your Bootcamp?</label>
        <input id="post-length" name="post-length" value="{{post.length}}"/>
      </div>
      <div>
        <label for="post-price">Price</label>
        <input id="post-price" name="post-price" value="{{post.price}}"/>
      </div>
      <div>
        <label for="post-overallRating">Overall rating</label>
        <input id="post-overallRating" name="post-overallRating" value="{{post.overallRating}}"/>
      </div>
      <div>
        <label for="post-review_comments">Additional Comments</label>
        <input id="post-review_comments" name="post-review_comments" value="{{post.review_comments}}"/>
      </div>
      <button href="/dashboard" class="edit-post" type="submit">Save Changes</button>
    </form>
  </section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>